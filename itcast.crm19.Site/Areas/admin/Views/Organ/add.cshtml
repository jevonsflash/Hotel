@model itcast.crm19.model.sysOrganStruct

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>add</title>
</head>
<body>
    <div style="margin:20px">
        @using (Ajax.BeginForm("add", "Organ", new AjaxOptions()
        {
            Url = Url.Action("add", "Organ"),
            HttpMethod = "Post",
            OnSuccess = "ajaxSuccess",
            OnBegin = "ajaxBegin",
            OnComplete = "ajaxComplete"

        }))
        {
            <table class="list">
                <tr>
                    <th>@Html.DisplayNameFor(c => c.osName)</th>
                    <td>
                        @Html.TextBoxFor(c => c.osName)
                        @Html.ValidationMessageFor(c => c.osName)
                    </td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(c => c.osParentID)</th>
                    <td>
                        @Html.TextBoxFor(c => c.osParentID)
                        @Html.ValidationMessageFor(c => c.osParentID)
                    </td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(c => c.osCateID)</th>
                    <td>
                        @Html.DropDownListFor(c => c.osCateID, ViewBag.osCateID as SelectList)
                        @Html.ValidationMessageFor(c => c.osCateID)
                    </td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(c => c.osStatus)</th>
                    <td>
                        @Html.DropDownListFor(c => c.osStatus, ViewBag.osStatus as SelectList)
                        @Html.ValidationMessageFor(c => c.osStatus)
                    </td>
                </tr>
                <tr>
                    <th></th>
                    <td>
                        <button class="btn btn-default">添加</button>
                        <button class="btn btn-default" onclick=" window.parent.helper.closePanel()">关闭</button>
                    </td>
                </tr>
                <tr>
                    <td colspan="2">
                        <div id="loading">
                            <img src="~/images/loading.gif" />
                            正在提交中.....
                        </div>
                    </td>
                </tr>
            </table>
        }
    </div>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>

</body>
</html>
